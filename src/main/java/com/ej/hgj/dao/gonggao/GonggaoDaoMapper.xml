    <!-- 根据主键查询-->
    <select id="getById" resultMap="BaseMap" parameterType="java.lang.String" >
        select
            <include refid="Base_Column_List" />
        from t_gonggao
        where id = #{id}
    </select>

    <!-- 查询列表-->
    <select id="getList" resultMap="BaseMap"  parameterType="com.ej.hgj.entity.gonggao.Gonggao">
        select
        g.*,t.name as type_name
        from t_gonggao g left join t_gonggao_type t on g.type = t.id
        where g.delete_flag = 0 and g.is_show = 0 and g.`source` = 3
        <if test="title != null">
            and g.title like CONCAT('%', #{title,jdbcType=VARCHAR},'%') ESCAPE '/'
        </if>
        <if test="proNum != null">
            and g.pro_num = #{proNum,jdbcType=VARCHAR}
        </if>
        <if test="type != null">
            and g.type = #{type,jdbcType=VARCHAR}
        </if>
        <if test="gonggaoTypeList != null and gonggaoTypeList.size() > 0">
            and g.type in
            <foreach collection="gonggaoTypeList" item="gonggaoType" index="index" open="(" close=")" separator=",">
                #{gonggaoType,jdbcType=INTEGER}
            </foreach>
        </if>
        order by g.update_time desc
    </select>

