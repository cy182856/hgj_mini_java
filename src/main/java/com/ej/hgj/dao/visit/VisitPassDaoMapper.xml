        <include refid="Base_Column_List" />
        from t_visit_pass
        where delete_flag = 0
        and cst_code=#{cstCode}
        and wx_open_id=#{wxOpenId}
        and rand_num is not null
        and DATE_FORMAT(create_time, '%Y-%m-%d') = DATE(NOW())
